<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back + Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="37dp"
                android:layout_height="wrap_content"
                android:onClick="back"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="About Us"
                android:textColor="@color/deep"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Paragraph -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Eventry, by manvi is your one-stop destination for discovering, booking, and managing events — from thrilling concerts and sports matches to community gatherings and entertainment shows.

Built with simplicity and style, Eventry offers users a smooth ticket-booking experience with transparent pricing, secure payments, and instant confirmation. Whether you’re a music lover, sports enthusiast, or someone who simply enjoys great experiences, Eventry ensures your seat is always just a tap away.

Developed with passion by Manvi, Eventry is more than just an app, it’s a smarter way to experience every event around you."
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:lineSpacingExtra="6dp" />
    </LinearLayout>
</ScrollView>
