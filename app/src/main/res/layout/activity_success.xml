<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    android:padding="24dp">

    <!-- Tick Icon -->
    <ImageView
        android:id="@+id/tickIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_check_circle_green"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <!-- Success Title -->
    <TextView
        android:id="@+id/successTitle"
        android:layout_below="@id/tickIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Tickets are Booked!"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="24dp" />

    <!-- Success Message -->
    <TextView
        android:id="@+id/successMessage"
        android:layout_below="@id/successTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Youâ€™re all set for the concert!"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="10dp" />

    <!-- Booking ID -->
    <TextView
        android:id="@+id/bookingId"
        android:layout_below="@id/successMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Booking ID: EVT123456"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="16dp" />

</RelativeLayout>
