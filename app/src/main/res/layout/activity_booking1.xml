<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/eventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="India vs Australia | Indore Stadium"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/eventDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sun, 15 Dec | 7:30 PM onwards"
            android:textColor="#A8A8A8"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Pavilion -->
    <Button
        android:id="@+id/btnPavilion"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="PAVILION"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:backgroundTint="@color/gold"
        android:background="@drawable/stand_button_bg"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Ground (non-clickable) -->
    <View
        android:id="@+id/groundView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/ground_bg"
        app:layout_constraintTop_toBottomOf="@id/btnPavilion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Stand A -->
    <Button
        android:id="@+id/btnStandLeft"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="STAND A"
        app:backgroundTint="@color/blue"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:background="@drawable/stand_button_bg"
        app:layout_constraintEnd_toStartOf="@id/groundView"
        app:layout_constraintTop_toTopOf="@id/groundView"
        app:layout_constraintBottom_toBottomOf="@id/groundView"
        android:layout_marginEnd="12dp"/>

    <!-- Stand B -->
    <Button
        android:id="@+id/btnStandRight"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="STAND B"
        app:backgroundTint="@color/blue"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:background="@drawable/stand_button_bg"
        app:layout_constraintStart_toEndOf="@id/groundView"
        app:layout_constraintTop_toTopOf="@id/groundView"
        app:layout_constraintBottom_toBottomOf="@id/groundView"
        android:layout_marginStart="12dp"/>

    <!-- Gallery -->
    <Button
        android:id="@+id/btnGallery"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="GALLERY"
        android:textStyle="bold"
        app:backgroundTint="@color/pink_medium"
        android:textColor="@android:color/black"
        android:background="@drawable/stand_button_bg"
        app:layout_constraintTop_toBottomOf="@id/groundView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Checkbox -->
    <CheckBox
        android:id="@+id/termsCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I agree to pre-book the tickets"
        android:textColor="@android:color/white"
        android:buttonTint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/btnGallery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

